<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaPoruka"
    android:background="@color/okvir">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_poruke"
                app:layout_constraintEnd_toStartOf="@+id/maptabprofil"
                app:layout_constraintHorizontal_bias="0.313"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_poruke"
                tools:srcCompat="@drawable/ic_poruke" />

            <ImageView
                android:id="@+id/maptabporuke"
                android:layout_width="151dp"
                android:layout_height="126dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_mapa"
                app:layout_constraintBottom_toTopOf="@+id/recyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mojprofil_volonter3"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_profil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/maptabprofil"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Layout_listaprimljenihporuka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>