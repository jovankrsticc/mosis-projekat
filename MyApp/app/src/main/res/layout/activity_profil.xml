<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/okvir"
    tools:context=".Profil">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_poruke"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="151dp"
        android:layout_height="126dp"
        android:src="@drawable/ic_mapa"
        app:layout_constraintBottom_toTopOf="@+id/searchView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_profil"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <EditText
        android:id="@+id/profil_telefon"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="Broj telefona"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/profil_adresa"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Korisničko ime:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_korisnicko"
        app:layout_constraintTop_toBottomOf="@+id/profil_telefon" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lozinka:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_lozinka"
        app:layout_constraintTop_toBottomOf="@+id/profil_adresa" />

    <EditText
        android:id="@+id/profil_lozinka"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="Lozinka"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/profil_prezime"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="Prezime"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prezime:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_prezime"
        app:layout_constraintTop_toBottomOf="@+id/profil_ime" />

    <EditText
        android:id="@+id/profil_ime"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="Ime"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btnIzmenaProfila"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/bordo"
        android:text="Izmena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_lozinka" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ime:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_ime"
        app:layout_constraintTop_toBottomOf="@+id/imageView_registracija" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="E-mail adresa:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_adresa"
        app:layout_constraintTop_toBottomOf="@+id/profil_korisnicko" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Broj telefona:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_telefon"
        app:layout_constraintTop_toBottomOf="@+id/profil_prezime" />

    <EditText
        android:id="@+id/profil_korisnicko"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:ems="12"
        android:enabled="false"
        android:hint="Korisnicko ime"
        android:inputType="textPersonName"
        android:rotationX="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView_registracija"
        android:layout_width="112dp"
        android:layout_height="107dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fui_ic_anonymous_white_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:srcCompat="@tools:sample/avatars" />

    <RadioGroup
        android:id="@+id/rbtntipkorisnika"
        android:layout_width="103dp"
        android:layout_height="97dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/imageView_registracija"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <RadioButton
            android:id="@+id/rbUkljuciNotifikacije"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:text="Ukluči" />

        <RadioButton
            android:id="@+id/rbIsljuci_notifikacije"
            android:layout_width="96dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="Isključi" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Notifikacije"
        app:layout_constraintEnd_toEndOf="@+id/rbtntipkorisnika"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/rbtntipkorisnika"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>